<p id="notice"><%= notice %></p>

<h1>Advertisements</h1>

<table>
  <thead>
    <tr>
      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Tempo exibicao</th>
      <th>Image url</th>
      <th>Advertisement</th>
      <th>Advertisement name</th>
      <th>Campaign</th>
      <th>Campaign name</th>
      <th>Campaign customers name</th>
      <th>Screen</th>
      <th>Template</th>
      <th>Grid</th>
      <th>Template</th>
      <th>Position</th>
      <th>Widget size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertisements.each do |advertisement| %>
      <tr>
        <td><%= advertisement.start_datetime %></td>
        <td><%= advertisement.end_datetime %></td>
        <td><%= advertisement.tempo_exibicao %></td>
        <td><%= advertisement.image_url %></td>
        <td><%= advertisement.advertisement_id %></td>
        <td><%= advertisement.advertisement_name %></td>
        <td><%= advertisement.campaign_id %></td>
        <td><%= advertisement.campaign_name %></td>
        <td><%= advertisement.campaign_customers_name %></td>
        <td><%= advertisement.screen_id %></td>
        <td><%= advertisement.template_id %></td>
        <td><%= advertisement.grid_id %></td>
        <td><%= advertisement.template_id %></td>
        <td><%= advertisement.position %></td>
        <td><%= advertisement.widget_size %></td>
        <td><%= link_to 'Show', advertisement %></td>
        <td><%= link_to 'Edit', edit_advertisement_path(advertisement) %></td>
        <td><%= link_to 'Destroy', advertisement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Advertisement', new_advertisement_path %>
